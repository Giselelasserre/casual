
 <div class="container">
 <h1> Good Choice, you've selected </h1>
  <div class="profile text-center">
    <div class="main">
      <div class="main-content">
        <img src="<%= image_url(@item.photo_item) %>" alt="" width="150" class="img-circle">

        <p> <%= @item.item_name %> </p>
        <p> Price in USD <%= @item.price %> </p>
        <p> Size <%= @item.size %> </p>

        <a href="#" class="btn btn-primary btn-lg">Buy this item</a>

        <a href="#">Add more items </a>
      </div>
    </div>

    <div class="description">
      <div class="description-content">

        <p class="text-justify">
        <p>Item Description</p>
        <h3> <%= @item.description %> </h3>
          This is a nice <%= @item.item_name %> available on the size <strong> <%= @item.size %> </strong> .
        </p>

        <p>The estimate time to get to you is <%= @item.days_delivery %> days!</p>
      </div>
    </div>
    <div class="stat">
      <div class="stat-content">
        <h3>3,536</h3>
        <p>contributions</p>
      </div>
    </div>
    <div class="stat">
      <div class="stat-content">
        <h3>758</h3>
        <p>followers</p>
      </div>
    </div>
    <div class="stat">
      <div class="stat-content">
        <h3>119</h3>
        <p>repositories</p>
      </div>
    </div>

  </div>
</div>



