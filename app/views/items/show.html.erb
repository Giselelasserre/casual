
 <div class="container">
 <h1> Good Choice, you've selected </h1>
  <div class="profile text-center">
    <div class="main">
      <div class="main-content">
      <% @item.photo_items.each do |photo| %>
  <%= cl_image_tag photo.path, width: 250, height: 300, crop: :fill, class: "img-circle" %>
<% end %>
        <p> <%= @item.item_name %> </p>
        <p> <%= @item.category %> </p>


        <%= render'shared/carousel' %>


      </div>
    </div>



    <div class="description">
      <div class="description-content">

        <p class="text-justify">

        <p> Price in USD <%= @item.price %> </p>
        <p> Size <%= @item.size %> </p>
<!--
        <p>Item Description</p>
        <h3> <%= @item.description %> </h3> -->
          This is a nice <%= @item.item_name %> available on the size <strong> <%= @item.size %> </strong> .
        </p>

        <p>The estimate time to get to you is <%= @item.days_delivery %> days!</p>

        <%= link_to "Buy this item", payment_path, class: "btn btn-primary btn-lg" %>


      </div>
    </div>


    <% @suggested_items.each do |i| %>
      <div class="stat">
        <div class="stat-content">
           <p> <%= link_to " + Add more items", items_path %> </p>
           <% if i.photo_items.any? %>
             <%= cl_image_tag i.photo_items.first.path, width: 80, crop: :fill, class: "img-circle" %>
          <% end %>
          <p> <%= i.category %> </p>
        </div>
      </div>
    <% end %>

  </div>
</div>






