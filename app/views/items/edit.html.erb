<%#= render'item/new' %>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
    <h1> Update your Items here </h1>
      <%= simple_form_for(@item) do |f| %>
        <%= f.input :category, collection: Item::CATEGORIES %>
        <%= f.input :item_name %>
        <%= f.input :size %>
        <%= f.input :address %>
        <%= f.input :price %>
        <%= f.input :days_delivery %>
        <%= f.file_field :picture %>

        <%= f.submit "Update this Item", class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>

