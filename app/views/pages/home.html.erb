
<div class="container ctn">
  <div class="banner-home" >
    <div class="banner-content">
      <h1 class="white">Get fashion with Casual</h1>
      <p>Well dress, everyday</p>
      <form action="/items" class="form-inline">

        <%= collection_select(:item, :category, Item::CATEGORIES, :to_s, :to_s, {}, class: "form-control input-lg search-bar select-input", name: "category", placeholder: "e.g:Pants,Blouse,Shirt" ) %>

        <input type="text" name="address" class="form-control input-lg search-bar" placeholder="Where?">

        <select name="size" id="" class="form-control input-lg search-bar select-input">
          <option value="All">All</option>
          <option value="S">S</option>
          <option value="M">M</option>S
          <option value="L">L</option>
        </select>

        <input type="submit" class="buton-purple" value="Search">
      </form>
    </div>
  </div>
</div>

